<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khin.composecourse">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeCourse">
        <activity
            android:name=".receipe.RecipeActivity"
            android:exported="true"
            android:label="@string/title_activity_recipe"
            android:theme="@style/Theme.ComposeCourse.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConstraintLayoutActivity"
            android:exported="true"
            android:label="@string/title_activity_constraint_layout"
            android:theme="@style/Theme.ComposeCourse.NoActionBar" />
        <activity
            android:name=".LazyListActivity"
            android:exported="true"
            android:label="@string/title_activity_list"
            android:theme="@style/Theme.ComposeCourse.NoActionBar" />
        <activity
            android:name=".ListActivity"
            android:exported="true"
            android:label="@string/title_activity_list"
            android:theme="@style/Theme.ComposeCourse.NoActionBar" />
        <activity
            android:name=".MaterialActivity"
            android:exported="true"
            android:label="@string/title_activity_material"
            android:theme="@style/Theme.ComposeCourse.NoActionBar" />
        <activity
            android:name=".StateActivity"
            android:exported="true"
            android:label="@string/title_activity_state"
            android:theme="@style/Theme.ComposeCourse.NoActionBar" />
        <activity
            android:name=".ModifierActivity"
            android:exported="false"
            android:label="@string/title_activity_modifier_activity"
            android:theme="@style/Theme.ComposeCourse.NoActionBar" />
        <activity
            android:name=".TextStyleActivity"
            android:exported="false"
            android:label="@string/title_activity_text_style"
            android:theme="@style/Theme.ComposeCourse.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ComposeCourse.NoActionBar" />
    </application>

</manifest>